<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/login_logo_background"
        android:fitsSystemWindows="true"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <!--app:popupTheme="@style/AppTheme.PopupOverlay">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/title_left_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:drawableLeft="@mipmap/title_left_back"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_4"
                android:text="@string/back"
                android:textSize="@dimen/sp_15"
                android:visibility="gone"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/title_right_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:layout_marginRight="@dimen/dp_15" />

            <ImageView
                android:id="@+id/title_right_img"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/title_right_message"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/title_left_img"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/title_left_slef"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/title_center_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <!--<View-->
        <!--android:id="@+id/topLine"-->
        <!--style="@style/horizontalLine_style"/>-->

    <FrameLayout
        android:id="@+id/child_contair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

</LinearLayout>
